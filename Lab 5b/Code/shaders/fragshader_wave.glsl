#version 330 core

// Define constants
#define M_PI 3.141593


/*
********************************************************************************
*                              Imported Variables                              *
********************************************************************************
*/


// Import: The (u,v) coordinate.
in vec2 uvCoordinateFrag;

// Import: The normal
in vec3 normal;

/*
********************************************************************************
*                              Exported Variables                              *
********************************************************************************
*/

// Export: Fragment shader color (RGBA).
out vec4 fColor;

/*
********************************************************************************
*                                    Main                                      *
********************************************************************************
*/

void main ()
{
    // Apply uv Shading.
    fColor = vec4(normalize(normal), 1.0);
}
