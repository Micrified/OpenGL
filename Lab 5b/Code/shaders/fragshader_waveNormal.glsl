#version 330 core

// Define constants
#define M_PI 3.141593


/*
********************************************************************************
*                              Imported Variables                              *
********************************************************************************
*/

// Import: The adjusted normal vector.
in vec3 adjustedNormalVector;


/*
********************************************************************************
*                              Exported Variables                              *
********************************************************************************
*/

// Export: Fragment shader color (RGBA).
out vec4 fColor;

/*
********************************************************************************
*                                    Main                                      *
********************************************************************************
*/

void main ()
{
    // Apply normal Shading.
    fColor = vec4(normalize(adjustedNormalVector), 1.0);
}
